<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal">

    <org.opencv.android.JavaCameraView
        android:id="@+id/opencv_tutorial_activity_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: 0, Y: 0"
        android:textColor="#B0171F"
        android:id="@+id/touch_coordinates"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touch_coordinates"
        android:text="Color: "
        android:textColor="#B0171F"
        android:id="@+id/touch_color"
    />


    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="0dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_sharpness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewBright"
        android:paddingBottom="0dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/textViewSharp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sb_sharpness"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:text="Sharpness"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewBright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sb_brightness"
        android:text="Brightness"
        android:layout_marginBottom="0dp"

        android:textColor="#FFFFFF" />
  </RelativeLayout>

